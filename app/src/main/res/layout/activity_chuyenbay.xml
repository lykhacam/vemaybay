<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tv_machuyenbay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="VJ425"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#9F0C0C" />

        <TextView
            android:id="@+id/tv_thoigian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="15:50 - 17:25"
            android:textAppearance="?attr/textAppearanceListItem"
            android:gravity="start" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tongtien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá: 1,390,000 đ"
                android:textAppearance="?attr/textAppearanceListItem" />
            <TextView
                android:id="@+id/tv_chitietgia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem chi tiết giá"
                android:textColor="#06284C" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_datve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt vé"
            android:layout_gravity="center_vertical|end" />
    </LinearLayout>


</LinearLayout>
