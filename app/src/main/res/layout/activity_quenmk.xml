<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEDED"
    android:weightSum="5">

    <!-- View ở trên cùng chiếm 1/3 màn hình -->
    <FrameLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/background_gradient"
        android:gravity="center">

        <!-- TextView cho Login -->
        <TextView
            android:id="@+id/tvLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textSize="32sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal|bottom"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:paddingBottom="52dp"/>

        <!-- TextView cho subtext như "Hi, welcome back!" -->
        <TextView
            android:id="@+id/tvSubtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, welcome back!"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal|bottom"
            android:paddingBottom="20dp"/> <!-- điều chỉnh padding để vị trí phù hợp -->

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="20dp"
        android:layout_weight="4"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="16dp"
            android:padding="16dp"/>


        <!-- Nút Xác nhận -->
        <Button
            android:id="@+id/btndangnhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gửi mật khẩu"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/clbutton"/>


    </LinearLayout>
</LinearLayout>
